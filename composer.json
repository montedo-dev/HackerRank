{
    "name": "montedo-dev/hacker-rank",
    "description": "Hacker Rank Solutions",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "authors": [
        {
            "name": "Rafael Montedo",
            "email": "rafaelmontedo@hotmail.com"
        }
    ],
    "require": {},
    "autoload": {
        "psr-4": {
            "HackerRank\\Solutions\\": "src/"
        }
    },
    "scripts": {
        "verify-php-standards": "vendor/bin/phpcs --standard=PSR12 ./src",
        "fix-php-standards": "vendor/bin/phpcbf --standard=PSR12 ./src",
        "tests": "vendor/bin/phpunit tests"
    },
    "scripts-descriptions": {
        "verify-php-standards": "Checks if the code is in PSR ( PHP code standards recommendations)",
        "fix-php-standards": "Automatic fix the code to be in PSR ( PHP code standars recommendations)",
        "tests": "Run tests from PHP Unit"
    }
}
